<header class="bar-title">
  <a href="/" class="button-prev" data-ignore="push">Change Filter</a>
  <ul class="segmented-controller">
    <li class="active"><a>List</a></li>
    <li><a href="/map">Map</a></li>
  </ul>
</header>

<div class="content">
  <ul class="list inset">
    <% @services.each do |service| %>
      <li role="service" data-category="<%= service["category"] %>">
        <a href="/details/<%= service["_id"] %>" data-transition="slide-in">
          <span class="distance"><%= service["distance"] %>mi</span>
          <strong><%= service["location_name"] %></strong>
          <span class="chevron"></span>
        </a>
      </li>
    <% end %>
  </ul>
</div>

